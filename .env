# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================
APP_NAME="University LMS 2025"
APP_VERSION="1.0.0"
DEBUG=True
ENVIRONMENT="development"

# =============================================================================
# DATABASE (PostgreSQL)
# =============================================================================
# NOTE: 'postgres' is the service name defined in docker-compose.yml
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=university_admin
POSTGRES_PASSWORD=SuperSecret2025!
POSTGRES_DB=university_lms

# SQLAlchemy Connection String
# Must match the credentials above!
DATABASE_URL=postgresql+psycopg2://university_admin:SuperSecret2025!@postgres:5432/university_lms

# =============================================================================
# SECURITY & AUTH
# =============================================================================
# CHANGE THIS IN PRODUCTION!
SECRET_KEY=09d25e094faa6ca2556c818166b7a9563b93f7099f6f0f4caa6cf63b88e8d3e7
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080
REFRESH_TOKEN_EXPIRE_DAYS=30

# Argon2 Password Hashing Tuning
ARGON2_TIME_COST=4
ARGON2_MEMORY_COST=1048576
ARGON2_PARALLELISM=8

# =============================================================================
# FILE UPLOADS
# =============================================================================
UPLOAD_DIR=/app/static/uploads
MAX_UPLOAD_SIZE_MB=50
# Note: No spaces after commas for list parsing
ALLOWED_EXTENSIONS=.pdf,.docx,.doc,.jpg,.jpeg,.png,.zip

# =============================================================================
# CLOUD STORAGE (AWS S3 / MinIO) - Optional
# =============================================================================
USE_S3=False
S3_BUCKET=university-lms-uploads
AWS_ACCESS_KEY_ID=change_me
AWS_SECRET_ACCESS_KEY=change_me
AWS_REGION=us-east-1

# =============================================================================
# EMAIL (SMTP) - Optional
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=no-reply@university.edu

# =============================================================================
# CORS & SECURITY HEADERS
# =============================================================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=True

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
# Path inside the Docker container
LOG_FILE=/app/logs/lms.log

# =============================================================================
# REDIS & RATE LIMITING
# =============================================================================
# 'redis' is the service name in docker-compose.yml
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0
RATE_LIMIT_PER_MINUTE=100

# =============================================================================
# ADMIN SEEDING (Auto-created on first run)
# =============================================================================
DEFAULT_ADMIN_EMAIL=admin@university.edu
DEFAULT_ADMIN_PASSWORD=Admin@2025!
DEFAULT_ADMIN_FULLNAME="System Administrator"
